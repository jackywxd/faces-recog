{
  "extends": "../../packages/config/typescript/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@face-recog/shared": [
        "../../packages/shared/src"
      ],
      "@face-recog/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@face-recog/database": [
        "../../packages/database/src"
      ],
      "@face-recog/database/*": [
        "../../packages/database/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*",
    "out/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ],
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/database"
    }
  ]
}
